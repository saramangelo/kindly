<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>
      Kindly
    </title>

    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&family=Kaushan+Script&family=Norican&family=Pattaya&family=Raleway:ital,wght@0,100;0,300;0,400;0,500;1,100;1,400;1,500&display=swap'
      rel='stylesheet'
    />

    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC'
      crossorigin='anonymous'
    />

    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body>
    <div class='d-flex flex-column justify-space-between'>
      <header class='d-flex justify-content-between p-2'>
        <h1>
          <a id='header-links' href='/'>
            Kindly
          </a>
          <span>
            <h3>
              <i>
                Make a real impact in your community!
              </i>
            </h3>
          </span>
        </h1>

        <nav>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a id='header-links' href='/profile'>
              profile
            </a>
            |
            <span id='logout'>
              <a id='header-links' id='logout'>
                logout
              </a>
            </span>
          {{else}}
            <a id='header-links' href='/login'>
              login
            </a>
          {{/if}}
        </nav>
      </header>

      <main class='container container-fluid mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>

      <footer>
        Made with ❤
        <br />
        © 2023 Edmond Buck, Owen Garret, Sara Angelo and Salma Loum
      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='./js/logout.js'></script>
    {{/if}}
  </body>
</html>