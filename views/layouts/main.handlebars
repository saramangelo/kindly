<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Kindly</title>
    <link rel='stylesheet' href='/css/jass.css' />
    <link rel='stylesheet' href='/css/style.css' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&family=Kaushan+Script&family=Norican&family=Pattaya&display=swap'
      rel='stylesheet'
    />
  </head>

  <body>
    <div class='flex-column justify-space-around'>
      <header class='display-flex justify-space-between align-center p-2'>
        <h1>

          <a id='header-links' href='/'>Kindly</a>
        </h1>
        <nav>
          <!-- Conditionally render login or logout links -->
          {{! if logged in, show a logout button }}
          {{#if logged_in}}
            <a id='header-links' href='/profile'>profile</a>
            |

             <span id="logout">
              <a id='header-links' id='logout'>logout</a></span>


          {{else}}

            {{! if not logged in, just show login link }}
            <a id='header-links' href='/login'>login</a>

          {{/if}}
        </nav>
      </header>

      <main class='container container-fluid mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='./js/logout.js'></script>
    {{/if}}
  </body>

</html>