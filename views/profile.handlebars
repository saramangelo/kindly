  {{#if opportunities.length}}
  <div class="col-md-6 opportunity-list">
    <h3>Current Opportunities:</h3>

    {{#each opportunities as |opportunity|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/opportunity/{{opportunity.id}}">{{opportunity.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{opportunity.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
