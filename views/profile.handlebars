<div class='d-flex row'>
  <div class='col-auto'>
    <h2>
      Welcome,
      {{name}}!
    </h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h4>
      Create A New Volunteer Opportunity!
    </h4>
    <br />

    {{! cloudinary widget }}
    {{! Need to add this widget to profile sign-up }}
    <form class='form new-opportunity-form'>
      <div class='mb-3'>
        <label for='upload_widget' class='form-label'>
          Upload Event Images below:
        </label>
        <br />
        <br />
        <button id='upload_widget' class='cloudinary-button'>Upload Files</button></div>

      <div class='form-group'>
        <label for='opportunity-name'>
          Event Name:
        </label>

        <input
          class='form-control'
          type='text'
          id='opportunity-name'
          name='opportunity-name'
        />
      </div>

      <div class='mb-3'>
        <label for='organization-name'>
          Who is sponsoring this opportunity?
        </label>
        <input
          class='form-control'
          type='text'
          id='organization-name'
          name='organization-name'
        />
      </div>

      <div class='mb-3'>
        <label for='opportunity-description'>
          Please provide details about this opportunity:
        </label>
        <textarea
          class='form-control'
          type='text'
          id='opportunity-description'
          name='opportunity-description'
        ></textarea>
      </div>

      <div class='mb-3'>
        <label for='date-of-opp'>
          When is it happening? MM/DD/YYYY
        </label>
        <input
          class='form-control'
          type='text'
          id='date-of-opp'
          name='date-of-opp'
        />
      </div>

      <div class='mb-3'>
        <label for='opportunity-location'>
          Where is it happening?
        </label>
        <input
          class='form-control'
          type='text'
          id='opportunity-location'
          name='opportunity-location'
        />
      </div>

      <div class='mb-3'>
        <label for='items-to-bring'>
          Please list the items for volunteers to bring to this event:
        </label>
        <input
          class='form-control'
          type='text'
          id='items-to-bring'
          name='items-to-bring'
        />
      </div>

      <div class='mb-3'>
        <label for='volunteers-needed'>
          Number of volunteers needed:
        </label>
        <input
          class='form-control'
          type='number'
          id='volunteers-needed'
          name='volunteers-needed'
        />
      </div>

      <!-- Modal -->
      <div class='container'>
        <!-- Trigger the modal with a button -->
        <button
          type='button'
          class='btn btn-info btn-lg'
          data-toggle='modal'
          data-target='#myModal'
        >Create</button>

        <div class='modal fade' id='myModal' role='dialog'>
          <div class='modal-dialog'>

            <!-- Modal content-->
            <div class='modal-content'>
              <div class='modal-header'>
                <button
                  type='button'
                  class='close'
                  data-dismiss='modal'
                >&times;</button>
                <h4 class='modal-title'>Error</h4>
              </div>
              <div class='modal-body'>
                <p>Please upload a photo prior to clicking 'Create'</p>
              </div>
              <div class='modal-footer'>
                <button
                  type='button'
                  class='btn btn-default'
                  data-dismiss='modal'
                >Close</button>
              </div>
            </div>

          </div>
        </div>

      </div>
    </form>
  </div>
</div>

{{#if opportunities.length}}
  <div class='col-md-6 opportunity-list'>
    <h4>
      Current Opportunities:
    </h4>

    {{#each opportunities as |opportunity|}}
      <div class='row mb-2'>
        <div class='col-md-8'>
          <h2>
            <a href='/opportunity/{{opportunity.id}}'>
              {{opportunity.name}}
            </a>
          </h2>
        </div>

        <div class='col-md-4'>
          <button
            class='btn btn-sm btn-warning edit-btn'
            data-id='{{opportunity.id}}'
          >EDIT</button>

          <button class='btn btn-sm btn-dark' data-id='{{opportunity.id}}'>
            DELETE
          </button>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

