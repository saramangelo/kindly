<div class='d-flex row m-2 p-1'>
  <div class='col-md-6'>
    <h2>
      <b>Login</b>
    </h2>

    <form class='form login-form'>
      <div class='form-group p-2'>
        <label for='email-login'>
          email:
        </label>
        <input class='form-control' type='text' id='email-login' />
      </div>
      <div class='form-group p-2'>
        <label for='password-login'>
          password:
        </label>
        <input class='form-control' type='password' id='password-login' />
      </div>
      <div class='form-group p-2'>
        <button class='btn btn-dark' type='submit'>
          login
        </button>
      </div>
    </form>
  </div>
  <div class='col-md-6'>
    <h2>
      <b>Signup</b>
    </h2>

    <form class='form signup-form'>
      <div class='form-group p-2'>
        <label for='name-signup'>
          name:
        </label>
        <input class='form-control' type='text' id='name-signup' />
      </div>
      <div class='form-group p-2'>
        <label for='email-signup'>
          email:
        </label>
        <input class='form-control' type='text' id='email-signup' />
      </div>
      <div class='form-group p-2'>
        <label for='password-signup'>
          password:
        </label>
        <input class='form-control p-2' type='password' id='password-signup' />
      </div>

      <div class='form-group'>
        <button class='btn btn-dark' type='submit'>
          signup
        </button>
      </div>
    </form>
  </div>
</div>

<script src='./js/login.js'></script>