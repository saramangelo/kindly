<!-- Loop over each object in the opportunities array -->

{{#each opportunities as |opportunity|}}
  <div class='row mb-6'>
    <div class='col-md-6 opportunity'>
      <div class='center-text'>
        <h2>
          <a href="/opportunity/{{opportunity.id}}">
            {{opportunity.name}}
          </a>
        </h2>

        <p>
          <span class='volunteers-needed'>
            {{volunteers_needed}}
          </span>
          volunteers needed!
        </p>

        <h5>
          {{opportunity.description}}
        </h5>

        <p>
          Created by {{opportunity.user.name}}
        </p>
      </div>
    </div>

    <div class='col-md-6 opportunity'>
      <figure class='figure'>
        <img
          class='figure-img img-fluid rounded center'
          src="{{opportunity.photo}}"
          alt="{{opportunity.photo.alt}}"
          width='200px'
        />
      </figure>
    </div>
  </div>
  <div class='seperator'>
    <hr />
  </div>
{{/each}}