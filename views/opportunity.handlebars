<div class='text-center'>
  <h1>
    {{name}}
  </h1>
  <div id="opportunity" data-id="{{id}}"></div>
  <img src="{{photo}}" alt='sponsor image' />
  <h3>
    Hosted by {{organization_name}} |  on {{date_of_opp}} |  in {{location}}
  </h3>
  <p>
    {{description}}
  </p>
  <p>
    <b>
      Volunteers can bring the following items:
    </b>
    {{items}}
  </p>
  <p>
    <span class='volunteers-needed'>
      {{volunteers_needed}}
    </span>
    volunteers needed
  </p>
      <div>
      <h3>Leave a comment below!</h3>
      <br />

  <div class="form-group">
    <label for="exampleFormControlTextarea1"></label>
    <textarea placeholder="Type your comment here..." class="form-control comment" id="comment" rows="3"></textarea>
  </div>
    </div>
    <br />

  {{#each comments as |comment|}}
  <p>{{comment.comments}}</p>
  {{/each}}
  <p>
    <button class='btn btn-primary'>
      Comment
    </button>
  </p>
</div>
