<div class='text-center'>
  <h1>
    {{name}}
  </h1>

  <div id='opportunity' data-id="{{id}}"></div>
  <img src="{{photo}}" alt='sponsor image' class='image-height' />

  <h3>
    Hosted by
    {{organization_name}}
    | on
    {{date_of_opp}}
    | in
    {{location}}
  </h3>
  <p>
    {{description}}
  </p>
  <p>
    <b>
      Volunteers can bring the following items:
    </b>
    {{items}}
  </p>
  <p>
    <span class='volunteers-needed'>
      {{volunteers_needed}}
    </span>
    volunteers needed
  </p>
  <div>
    <br />
    <div>
      <h3>
        Leave a comment below!
      </h3>

      <br />

      <div class='form-group'>
        <label for='exampleFormControlTextarea2'></label>
        <textarea
          placeholder='Type your comment here...'
          class='form-control comment'
          id='comment'
          rows='3'
        ></textarea>
      </div>
    </div>
  </div>
  <br />

  <p>
    <button class='btn btn-dark'>
      Comment
    </button>
  </p>

  {{#each comments as |comment|}}
    <ul class='list-group list-group-flush'>
      <li class='list-group-item list-group-item-info'>
        {{comment.user_name}} | {{comment.comments}}
      </li>
    </ul>
  {{/each}}
</div>