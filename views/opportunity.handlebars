<div class='text-center'>
  <h1>
    {{name}}
  </h1>
  <div id="opportunity" data-id="{{opportunity.id}}"></div>
  <img src="{{photo}}" alt='sponsor image' />
  <h3>
    Hosted by {{organization_name}} |  on {{date_of_opp}} |  in {{location}}
  </h3>
  <p>
    {{description}}
  </p>
  <p>
    <b>
      Volunteers can bring the following items:
    </b>
    {{items}}
  </p>
  <p>
    <span class='volunteers-needed'>
      {{volunteers_needed}}
    </span>
    volunteers needed
  </p>
      <div>
      <h3>Leave a comment below!</h3>
      <br />
      <textarea rows="4" cols="65" name="comment" class="comment" form="usrform" id="comment"></textarea>
    </div>
    <br />
  <p>
    <button class='btn btn-primary'>
      Comment
    </button>
  </p>
</div>
<script src="./js/comments.js"></script>