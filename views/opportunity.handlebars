<div class='text-center'>
  <h1>
    {{name}}
  </h1>

  <div id='opportunity' data-id='{{id}}'></div>
  <img src='{{photo}}' alt='sponsor image' class='image-height' />

  <h3>
    Hosted by
    {{organization_name}}
    | on
    {{date_of_opp}}
    | in
    {{location}}
  </h3>
  <p>
    {{description}}
  </p>
  <p>
    <b>
      Volunteers can bring the following items:
    </b>
    {{items}}
  </p>
  <p>
    <span class='volunteers-needed'>
      {{volunteers_needed}}
    </span>
    volunteers needed
  </p>
  <div>
    {{!-- <br />
    <p>
      Click the button below to add your name to the list!
    </p>
    <button type='button' class='btn btn-dark sign-up' id='sign-up'>
      Sign me up!
    </button>
    <script>
      function changeText(){ document.querySelector('#sign-up').textContent =
      "You are signed up!" }
      document.querySelector('#sign-up').addEventListener('click', changeText);
    </script> --}}
    <br />
    <div>
      <h3>Leave a comment below!</h3>

      <br />

      <div class='form-group'>
        <label for='exampleFormControlTextarea1'></label>
        <textarea
          placeholder='Type your comment here...'
          class='form-control comment'
          id='comment'
          rows='3'
        ></textarea>
      </div>
    </div>
  </div>
  <br />

  {{#each comments as |comment|}}
    <p>{{comment.comments}}</p>
  {{/each}}
  <p>
    <button class='btn btn-dark'>
      Comment
    </button>
  </p>

</div>
